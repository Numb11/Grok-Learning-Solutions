rain = input("Is it currently raining? ")
if rain == "No":
  distance = int(input("How far in km do you need to travel? "))
  if distance < 2:
    print("You should walk.")
  elif distance>10:
    print("You should take the bus.")
  else:
    print("You should ride your bike.")
else:
  print("You should take the bus.")
